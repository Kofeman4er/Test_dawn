{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content page-width">

    <div class="footer__grid">
      
      <!-- LEFT: Newsletter + Socials -->
      <div class="footer__left">
        {%- if section.settings.newsletter_enable -%}
          <div class="footer__newsletter">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2 class="footer__heading">{{ section.settings.newsletter_heading }}</h2>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="footer__newsletter-fields">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="footer__input"
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <button type="submit" class="footer__submit">{{ 'newsletter.button_label' | t }}</button>
              </div>
            {%- endform -%}
          </div>
        {%- endif -%}

        {%- if section.settings.show_social and has_social_icons -%}
          <div class="footer__social-icons">
            {%- render 'social-icons' -%}
          </div>
        {%- endif -%}
      </div>

      <!-- RIGHT: Link columns -->
      <div class="footer__right">
        <div class="footer__links-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'link_list' -%}
              <div class="footer__links-column">
                {%- if block.settings.heading != blank -%}
                  <h4 class="footer__column-heading">{{ block.settings.heading }}</h4>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__menu">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

    </div>

    <!-- Bottom: Feedback link -->
    <div class="footer__bottom">
      <a href="#" class="footer__feedback-link">GIVE FEEDBACK</a>
    </div>

  </div>
</footer>
<styles>
  .footer__content {
  padding: 40px 0;
}

.footer__grid {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 50px;
}

.footer__left {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.footer__newsletter-fields {
  display: flex;
  margin-top: 10px;
}

.footer__input {
  flex: 1;
  padding: 10px;
  border: 1px solid #000;
  border-right: none;
}

.footer__submit {
  padding: 10px 20px;
  border: 1px solid #000;
  background: transparent;
  font-weight: bold;
  cursor: pointer;
}

.footer__social-icons {
  display: flex;
  gap: 10px;
}

.footer__links-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

.footer__links-column h4 {
  margin-bottom: 10px;
  font-size: 16px;
}

.footer__menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__menu-link {
  color: #000;
  text-decoration: none;
  font-size: 14px;
  display: block;
  margin-bottom: 8px;
}

.footer__bottom {
  margin-top: 30px;
  text-align: center;
}

.footer__feedback-link {
  text-decoration: underline;
  font-size: 14px;
  color: #000;
}
</styles>

{% schema %}
{
  "name": "t:sections.custom-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-liquid.presets.name"
    }
  ]
}
{% endschema %}
